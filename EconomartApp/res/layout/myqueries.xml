<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView android:id="@+id/test_image" android:layout_width="wrap_content" android:src="@drawable/economartlogo" android:layout_height="wrap_content"></ImageView>
    
    <TextView android:id="@+id/defaulttext"
   		 android:textSize="18sp"
   		 android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:text="@string/pleaserespond"
         android:textStyle="bold" />
      
    
   <ListView android:id="@android:id/list" 
   			android:layout_height="wrap_content" 
   			 android:layout_width="match_parent">
   </ListView>
   
   <TextView android:id="@android:id/empty"
   		 android:textSize="18sp"	
   		 android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" android:text="@string/emptysetmyqueries"/>
    
    </LinearLayout>